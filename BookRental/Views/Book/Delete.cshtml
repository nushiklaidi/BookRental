                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="~/Content/images/@Html.DisplayFor(model => model.Book.ImageUrl)" alt="" style="width:100%; height:auto" />
                </div>
            </fieldset>
        </div>

    </div>
    <br />
    <div>
        @Html.Partial("_BackToListButtonPartial")
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
