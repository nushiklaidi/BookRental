@model IEnumerable<BookRental.ViewModel.UserViewModel>
@using BookRental.Models

@{
    ViewBag.Title = "Manage User";
}

<h2>Manage User</h2>

<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Email)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Disable)
        </th>
        <th>
            Action
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(m => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(m => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(m => item.Email)
            </td>
            <td>
                @Html.DisplayFor(m => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(m => item.BirthDate)
            </td>
            <td>
                @Html.CheckBoxFor(m => item.Disable, new { @disabled = "disable"})
            </td>
            @Html.Partial("_TableButtonPartial", new IndividualButtonPartial { UserId = item.Id })
        </tr>
    }
</table>
